  /*------------RESIDENCIAS------------*/
  section#residencias {
    position: relative;
  }
  section#residencias:before {
    content: "";
    position: absolute;
    background-image: url(/BACKGROUND3.png);
    top: 0;
    left: 0;
    width: 100%;
