    border-radius: 50px;
    color: #fff;
    font-size: 35px;
    padding: 5px 25px;
    font-weight: 900;
    position: relative;
    padding-left: 25px;
  }

  .btn-wpp {
    padding-top: 6%;
  }
  .item-residencia:nth-child(2) .item-content-residencia {
