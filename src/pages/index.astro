<style>
  .container-main {
    width: 1200px;
    max-width: 90%;
    margin: 0 auto;
  }
  @media only screen and (max-width: 959px) {
    .container-main {
      max-width: 90%;
    }
  }
  .responsive-video-wrap {
    position: relative;
  }
  .responsive-video-wrap iframe {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    height: 100%;
    width: 100%;
    display: block;
  }
  /*------------BANNER MAIN-------------*/

  section#banner-main {
    background-position: center;
    background-size: cover;
  }
  #banner-main {
    position: relative;
    overflow: hidden;
  }

  #background-video {
    position: absolute;
    top: 50%;
    left: 50%;
    min-width: 100%;
    min-height: 100%;
    width: auto;
    height: auto;
    z-index: 0;
    transform: translate(-50%, -50%);
    object-fit: cover;
  }
  .content-img-text {
    width: 55%;
    padding-top: 13%;
    padding-bottom: 8%;
    position: relative;
    z-index: 1;
  }
  section#banner-main:before {
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    background: #000;
    z-index: 1;
    opacity: 0.2;
  }

  @media (width < 875px) {
    .content-img-text {
      width: 55%;
      padding-top: 17%;
      padding-bottom: 10%;
    }
  }
  @media (width < 500px) {
    .content-img-text {
      width: 97%;
      padding-top: 26%;
      padding-bottom: 13%;
    }
  }

  /*------------DA EL PRIMER PASO-------------*/

  section#primer-paso {
    width: 100%;
    background-image: url(/BACKGROUND-SECTION2.png);
    background-size: cover;
